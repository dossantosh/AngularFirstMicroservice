{
  "name": "shell",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "shell/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "options": {
        "outputPath": "dist/shell",
        "index": "shell/src/index.html",
        "main": "shell/src/main.ts",
        "tsConfig": "shell/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "shell/public"
          },
          {
            "glob": "**/*",
            "input": "libs/assets/src/lib/assets",
            "output": "assets"
          },
          {
            "glob": "favicon.ico",
            "input": "libs/assets/src/lib/assets",
            "output": "/"
          }
        ],
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/styles/src/lib"
          ]
        },
        "styles": [
          "libs/styles/src/lib/common.styles.scss",
          "libs/styles/src/lib/theme.scss"
        ],
        "customWebpackConfig": {
          "path": "shell/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200",
        "buildTarget": "shell:build:development",
        "proxyConfig": "shell/public/proxy.conf.mf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "shell:build:production"
        },
        "development": {
          "buildTarget": "shell:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "shell:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "reportsDirectory": "../coverage/shell"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "shell:build",
        "port": 4200,
        "devRemotes": [],
        "spa": true
      }
    }
  }
}